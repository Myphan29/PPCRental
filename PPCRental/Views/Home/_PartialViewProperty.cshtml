@model PagedList.IPagedList<PPCRental.Models.PROPERTY>
@using PagedList.Mvc;

 
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-6">
            <div class="thumbnail">

                <img src="/Images/@item.Avatar" alt="@item.PropertyName">
                <div class="caption">
                    <h3>@item.PropertyName</h3>
                    <p>@item.Content.Substring(0, 60)...</p>
                    <p>Price: @item.Price VND</p>
                    <p><a href="/Property/Detail/@item.ID" class="btn btn-primary" role="button">Chi tiết</a> </p>
                </div>
            </div>
        </div>
    }
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Getpaging", new { page }),
    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "property" }))





@model PagedList.IPagedList<PPCRental.Models.PROPERTY>
@using PagedList.Mvc;


@foreach (var item in Model)
{
    <li>

        <a href="/Property/Detail/@item.ID">
            <img src="~/img/property/@item.Avatar" alt="" title="" class="property_img" />
        </a>
        <span class="price">@item.Price VND</span>
        <div class="property_details">
            <h1>
                <a href="/Property/Detail/@item.ID">@item.PropertyName</a>
            </h1>
            <h2>
                @item.Content.Substring(0, 80)... @*<span class="property_size">(288ftsq)</span>*@
                <br />
                <p style="font-size:20px">
                    <i class='fa fa-bath'></i>@item.BathRoom
                    <i class='fa fa-bed'></i>@item.BedRoom
                    <i class='fa fa-car'></i>@item.PackingPlace
                </p>
            </h2>





        </div>
    </li>
}
<li class=" pagenumber">

    @Html.PagedListPager(Model, page => Url.Action("Getpaging", new { page }),
  PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "property" }))
</li>





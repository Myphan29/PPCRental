
@{
    ViewBag.Title = "Search result ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PPCRental.Models;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="author" content="pixelhint.com">
    <meta name="description" content="La casa free real state fully responsive html5/css3 home page website template" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/reset.css">
    <link rel="stylesheet" type="text/css" href="~/css/responsive.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <script type="text/javascript" src="~/js/jquery.js"></script>
    <script type="text/javascript" src="~/js/main.js"></script>
</head>
<body>
    @* Hien thi danh sach property su dung pagedList *@
    <section class="listings">
        <div class="wrapper">
            <ul class="properties_list">
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="/Property/Detail/@item.ID">
                                <img src="~/img/property/@item.Avatar" alt="" title="" class="property_img" />
                            </a>
                            <span class="price">@item.Price VND</span>
                            <div class="property_details">
                                <h1>
                                    <a href="/Property/Detail/@item.ID">@item.PropertyName</a>
                                </h1>
                                <h2>
                                    @item.Content.Substring(0, 80)... @*<span class="property_size">(288ftsq)</span>*@
                                    <br />
                                    <p style="font-size:15px">
                                        <i class='fa fa-bath'></i>&ensp;@item.BathRoom&ensp;
                                        <i class='fa fa-bed'></i>&ensp;@item.BedRoom&ensp;
                                        <i class='fa fa-car'></i>&ensp;@item.PackingPlace&ensp;
                                    </p>
                                </h2>
                            </div>
                        </li>
                    }
            </ul>
        </div>
    </section>
</body>
</html>




